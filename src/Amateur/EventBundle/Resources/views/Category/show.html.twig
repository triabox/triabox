{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Category</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ entity.code }}</td>
            </tr>
            <tr>
                <th>Isglobal</th>
                <td>{{ entity.isGlobal }}</td>
            </tr>
            <tr>
                <th>Distancetotal</th>
                <td>{{ entity.distanceTotal }}</td>
            </tr>
            <tr>
                <th>Distancefirstrun</th>
                <td>{{ entity.distanceFirstRun }}</td>
            </tr>
            <tr>
                <th>Distancelastrun</th>
                <td>{{ entity.distanceLastRun }}</td>
            </tr>
            <tr>
                <th>Distanceswim</th>
                <td>{{ entity.distanceSwim }}</td>
            </tr>
            <tr>
                <th>Distancebike</th>
                <td>{{ entity.distanceBike }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('category') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('category_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('category_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
